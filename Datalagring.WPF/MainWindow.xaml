<Window x:Class="Datalagring.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kursadministration"
        Height="800"
        Width="500">

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="Student- och Kursadministration"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- 1. SKAPA KURS -->
            <GroupBox Header="1. Skapa Kurs" Margin="0,0,0,20" Padding="10">
                <StackPanel>
                    <Label Content="Kursnamn:"/>
                    <TextBox x:Name="txtCourseName" Margin="0,0,0,10"/>
                    <Button Content="Skapa Kurs"
                            Click="btnCreateCourse_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- 2. SKAPA LÄRARE -->
            <GroupBox Header="2. Skapa Lärare" Margin="0,0,0,20" Padding="10">
                <StackPanel>
                    <Label Content="Förnamn:"/>
                    <TextBox x:Name="txtInstructorFirstName" Margin="0,0,0,5"/>
                    <Label Content="Efternamn:"/>
                    <TextBox x:Name="txtInstructorLastName" Margin="0,0,0,10"/>
                    <Button Content="Skapa Lärare"
                            Click="btnCreateInstructor_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- 3. SKAPA KURSTILLFÄLLE -->
            <GroupBox Header="3. Skapa Kurstillfälle" Margin="0,0,0,20" Padding="10">
                <StackPanel>
                    <Label Content="Välj Kurs:"/>
                    <ComboBox x:Name="cbCourses"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,5"/>

                    <Label Content="Välj Lärare:"/>
                    <ComboBox x:Name="cbInstructors"
                              DisplayMemberPath="LastName"
                              Margin="0,0,0,5"/>

                    <Label Content="Kapacitet:"/>
                    <TextBox x:Name="txtCapacity" Margin="0,0,0,10"/>

                    <Button Content="Skapa Kurstillfälle"
                            Click="btnCreateInstance_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- 4. REGISTRERA STUDENT -->
            <GroupBox Header="4. Registrera ny Student" Margin="0,0,0,20" Padding="10">
                <StackPanel>
                    <Label Content="Förnamn:"/>
                    <TextBox x:Name="txtFirstName" Margin="0,0,0,5"/>
                    <Label Content="Efternamn:"/>
                    <TextBox x:Name="txtLastName" Margin="0,0,0,5"/>
                    <Label Content="E-post:"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
                    <Button Content="Spara Student"
                            Click="btnSaveStudent_Click"
                            Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- 5. REGISTRERA PÅ KURS -->
            <GroupBox Header="5. Registrera Student på Kurs (M:N)" Padding="10">
                <StackPanel>
                    <Label Content="Välj Student:"/>
                    <ComboBox x:Name="cbParticipants"
                              DisplayMemberPath="FirstName"
                              Margin="0,0,0,10"/>

                    <Label Content="Välj Kursinstans:"/>
                    <ComboBox x:Name="cbCourseInstances"
                              DisplayMemberPath="CourseName"
                              Margin="0,0,0,15"/>

                    <Button Content="Genomför Kursregistrering"
                            Click="btnRegister_Click"
                            Height="35"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="Registreringar för vald kurs:"
                       FontWeight="Bold"
                       Margin="0,20,0,5"/>

            <DataGrid x:Name="dgRegistrations"
                      Height="150"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"/>

        </StackPanel>
    </ScrollViewer>

</Window>